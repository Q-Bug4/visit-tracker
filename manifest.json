{
    "name": "History Checker",
    "version": "1.0",
    "manifest_version": 3,
    "description": "Check if DOM elements are present in browser history",
    "background": {
      "service_worker": "background.js"
    },
    "permissions": [
      "history",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "web_accessible_resources": [
        {
          "resources": [
            "styles.css"
          ],
          "matches": [
            "https://*/*",
            "http://*/*"
          ]
        }
      ],
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "js": ["content.js"],
        "run_at": "document_end"
      }
    ]
  }
  